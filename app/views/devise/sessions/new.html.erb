<div class="row">
    <div class="col-md-offset-4 col-sm-offset-2 col-md-4 col-sm-18 col-xs-12 text-center">
		<h1>Log in</h1>
	</div>
	<div class="col-md-offset-4 col-sm-offset-2 col-md-4 col-sm-8 col-xs-12 text-center">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
		    <%= f.input :password, required: false ,input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' }%>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Log in",class: "btn btn-success form-control" %>
		  </div>
		  OR
		  <div class="form-actions">
		    <%= link_to "Sign up", "/users/sign_up" , class: "btn btn-default form-control", role: "button" %>
		  </div>
		<% end %>
	</div>
</div>
